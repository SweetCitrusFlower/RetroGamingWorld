@using Microsoft.AspNetCore.Identity
@using RetroGamingWorld.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Articles" asp-action="Index">Articole</a>
    </li>

    @if (User.IsInRole("Administrator"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Articles" asp-action="PendingArticles">
                Moderare Articole
            </a>
        </li>
    }

    @if (User.IsInRole("Colaborator"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Articles" asp-action="MyArticles">
                Articolele mele
            </a>
        </li>
    }

    @if (User.IsInRole("Administrator"))
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">
                Afișare categorii
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="New">
                Adăugare categorie
            </a>
        </li>
    }
</ul>

<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("User"))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Wishlist" asp-action="Index">
                    Wishlist
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Cart" asp-action="Index">
                    Coșul tău
                </a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-white"
               asp-area="Identity"
               asp-page="/Account/Manage/Index"
               title="Manage">
                Contul tău
            </a>
        </li>

        <li class="nav-item">
            <form class="form-inline"
                  asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </li>
    }

</ul>
