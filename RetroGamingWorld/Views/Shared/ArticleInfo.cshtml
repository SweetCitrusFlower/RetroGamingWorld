@model RetroGamingWorld.Models.Article

<div class="card-body">

    <div class="d-flex justify-content-evenly flex-grow-1">
        <div class="d-flex justify-content-center align-items-center">
            <h3 class="card-title alert-success py-1 px-1 rounded-2">@Model.Title</h3>
        </div>
        <div class="d-flex flex-column justify-content-between">
            <div class="d-flex flex-row justify-content-evenly align-content-center">
                <i class="bi bi-globe"></i> @Model.Category.CategoryName

                <i class="bi bi-person"></i> @Model.User.UserName
            </div>

            <div class="card-text">@Model.Content</div>

            <div><span class="alert-success">@Model.Date</span></div>
        </div>
    </div>

</div>