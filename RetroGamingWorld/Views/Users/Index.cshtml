
<div class="d-flex justify-content-between align-items-center mb-5 p-4 rounded-3 shadow-sm bg-white border-start border-5 border-danger">
    <div>
        <h1 class="display-6 fw-bold mb-0"><i class="bi bi-person me-2"></i> Moderare Utilizatori</h1>
    </div>
</div>
<div class="row">
@foreach (var user in ViewBag.UsersList)
{
    <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">
        
            <div class="card-body d-flex justify-content-between flex-column">
                <div>
                    <p><i class="bi bi-person"> </i> UserName: @user.User.UserName</p>

                    <p><i class="bi bi-envelope"></i> Email utilizator: @user.User.Email</p>


                    @if (@user.User.FirstName != null)
                    {
                            <p><i class="bi bi-person"> </i> Nume utilizator: @user.User.FirstName</p>
                    }


                    @if (@user.User.LastName != null)
                    {
                            <p><i class="bi bi-person"> </i> Prenume utilizator: @user.User.LastName</p>
                    }


                    @if (@user.User.PhoneNumber != null)
                    {
                            <p><i class="bi bi-phone"></i> Telefon utilizator: @user.User.PhoneNumber</p>
                    }

                    </div>

                    <p><i class="bi bi-person"></i> Rol utilizator:</p>
                        <span class="rounded-pill bg-dark mr-2 px-4 py-2 text-white">@user.RoleName</span>
                <div class="d-flex flex-row justify-content-between p-3">

                    <div>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.User.Id" class="btn btn-sm btn-success">Editare utilizator</a>
                    </div>
                </div>
            </div>
         </div>
    </div>
}
   
</div>

