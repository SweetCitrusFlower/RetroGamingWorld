@model RetroGamingWorld.Models.Comment
@{
    ViewBag.Title = "Edit";
}

<h2>Editare comentariu</h2>
<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            <form method="post" asp-action="Edit" asp-controller="Comments" asp-route-id="@Model.Id">
                <div class="form-group">
                    <label>Ratingul produsului</label>
                    <br />
                    @for (int i = 1; i <= 5; i++)
                    {
                        <label>
                            <input type="radio" asp-for="Rating" value="@i" />
                            @i ⭐
                        </label>
                    }
                    <br />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <br/>

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Conținut comentariu</label>
                    <br />
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <br />
                </div>
                <button class="btn btn-primary" type="submit">Editează comentariul</button>
            </form>

        </div>
    </div>
</div>

