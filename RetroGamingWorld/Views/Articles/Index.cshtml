@using RetroGamingWorld.Models
@{
    ViewData["Title"] = "Articole";
}

<div class="d-flex justify-content-center mb-5 mt-4">
    
    @if (!User.IsInRole("Administrator"))
    {
        <a class="btn btn-success btn-lg shadow" asp-action="New">
            Adaugă un articol nou
        </a>
    }

    @if (User.IsInRole("Administrator"))
    {
        <a class="btn btn-warning btn-lg shadow ms-3" asp-controller="Categories" asp-action="New">
            + Adaugă Categorie (Admin)
        </a>
    }
</div>

@if (ViewBag.message != null)
{
    <div class="alert alert-success text-center mb-4">
        @ViewBag.message
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var article in ViewBag.Articles)
        {
            string cardBorder = "border-0 shadow-sm"; 
            string headerStyle = "background-color: #d1e7dd; color: #0f5132;";
            
            if (!article.IsApproved)
            {
                cardBorder = "border border-3 border-danger shadow";
                headerStyle = "background-color: #f8d7da; color: #842029;"; 
            }

            <div class="col-md-6 mb-4">
                <div class="card h-100 @cardBorder">
                    
                    <div class="card-header text-center py-3" style="@headerStyle">
                        <h3 class="card-title m-0">
                            @article.Title
                            @if (!article.IsApproved)
                            {
                                <br/><span class="badge bg-danger mt-1" style="font-size: 0.5em;">NEAPROBAT</span>
                            }
                        </h3>
                    </div>

                    <div class="card-body d-flex flex-column">
                        
                        <p class="card-text mb-4">
                            @if (article.Content.Length > 120)
                            {
                                @article.Content.Substring(0, 120) <span>...</span>
                            }
                            else
                            {
                                @article.Content
                            }
                        </p>

                        @if (User.IsInRole("Administrator") && !article.IsApproved)
                        {
                            <div class="alert alert-warning p-2 text-center">
                                <strong>Acțiune Admin:</strong>
                                <div class="mt-2">
                                    <form method="post" asp-action="Approve" asp-route-id="@article.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-success btn-sm">✅ Aprobă</button>
                                    </form>
                                    <form method="post" asp-action="Delete" asp-route-id="@article.Id" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm ms-2">🗑️ Respinge</button>
                                    </form>
                                </div>
                            </div>
                        }

                        <div class="mt-auto pt-3 border-top">
                            <div class="d-flex justify-content-between align-items-center">
                                
                                <div>
                                    <small class="text-muted d-block">
                                        <i class="bi bi-person"></i> @(article.User?.UserName ?? "Anonim")
                                    </small>
                                    <span class="badge bg-secondary">@article.Category?.CategoryName</span>
                                </div>

                                <div>
                                    <a asp-action="Show" asp-route-id="@article.Id" class="btn btn-success">
                                        Afisare articol
                                    </a>

                                    @if (User.IsInRole("Administrator") && article.IsApproved)
                                    {
                                         <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-outline-dark btn-sm ms-1">Edit</a>
                                         <form method="post" asp-action="Delete" asp-route-id="@article.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-outline-danger btn-sm ms-1">X</button>
                                         </form>
                                    }
                                </div>
                            </div>
                            
                            <div class="text-end mt-1">
                                <small class="text-muted" style="font-size: 0.75em;">@article.Date.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>