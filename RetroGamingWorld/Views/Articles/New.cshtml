@model RetroGamingWorld.Models.Article

@{
    ViewData["Title"] = "Propune un articol";
}

<div class="row justify-content-center my-5">
    <div class="col-md-8">

        @* Header *@
        <div class="d-flex justify-content-between align-items-center mb-4 p-4 rounded-3 shadow-sm bg-white border-start border-5 border-success">
            <div>
                <h1 class="display-6 fw-bold mb-0">✨ Propune un articol </h1>
                <p class="text-muted mb-0">Completează detaliile noului produs.</p>
            </div>
            <a href="/Articles/MyArticles" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Înapoi
            </a>
        </div>

        @* Cardul formularului *@
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-5">

                <form method="post" asp-action="New" asp-controller="Articles" enctype="multipart/form-data">

                    @* Titlu *@
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-bold">Titlu articol</label>
                        <input asp-for="Title" class="form-control" placeholder="Ex: Nume joc..." />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    @* Continut *@
                    <div class="mb-4">
                        <label asp-for="Content" class="form-label fw-bold">Descriere</label>
                        <textarea asp-for="Content" class="form-control" rows="6" placeholder="Adaugă aici descrierea produsului..."></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    @* Imagine *@
                    <div class="mb-4">
                        <label asp-for="ImageFile" class="form-label fw-bold">Încarcă o imagine</label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept=".png,.jpg,.jpeg,.gif" />
                        <div class="form-text text-muted">Acceptăm: .jpg, .png, .gif (Maxim 5MB)</div>
                        <span asp-validation-for="ImageFile" class="text-danger small"></span>
                    </div>

                    @* Pret si stoc *@
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label fw-bold">Preț</label>
                            <div class="input-group">
                                <input asp-for="Price" class="form-control" placeholder="0.00" />
                                <span class="input-group-text bg-light text-muted fw-bold">RON</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Stock" class="form-label fw-bold">Stoc disponibil</label>
                            <input asp-for="Stock" class="form-control" placeholder="0" />
                            <span asp-validation-for="Stock" class="text-danger small"></span>
                        </div>
                    </div>

                    @* Categorie *@
                    <div class="mb-5">
                        <label asp-for="CategoryId" class="form-label fw-bold">Categoria</label>
                        <select asp-for="CategoryId" asp-items="Model.Categ" class="form-select">
                            <option value="">Selectează categoria</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    @* Submit *@
                    <div class="d-grid">
                        <button class="btn btn-success btn-lg shadow-sm" type="submit">
                            <i class="bi bi-check-lg"></i> Propune articolul
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}