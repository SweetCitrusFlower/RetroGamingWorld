@model RetroGamingWorld.Models.Article

<h2 class="text-center mt-5">Adaugare articol</h2>

<br /><br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" asp-controller="Articles" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu </label>
                    <br />
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Conținut </label>
                    <br />
                    <textarea asp-for="Content" class="form-control" ></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageFile" class="control-label fw-bold">Încarcă Imagine</label>
                    @* Input de tip FILE *@
                    <input asp-for="ImageFile" type="file" class="form-control" accept=".png,.jpg,.jpeg,.gif" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <small class="text-muted">Acceptăm: .jpg, .jpeg, .png, .gif (Maxim 5MB)</small>
                </div>

                <div class="d-flex justify-content-evenly">

                    <div class="form-group p-1">
                        <label asp-for="Price" class="form-label">Preț </label>
                        <br />
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <br />
                    </div>

                    @* <div class="form-group p-1">
                        <label asp-for="Rating" class="form-label">Rating </label>
                        <br />
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                        <br />
                    </div> *@
                    <div class="form-group p-1">
                        <label asp-for="Stock" class="form-label">Stoc </label>
                        <br />
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                        <br />
                    </div>
                </div>

                <div class="form-group">
                    <label for="CategoryId">Categoria</label>
                    <br />
                    <select name="CategoryId" asp-for="CategoryId" asp-items="Model.Categ" class="form-control">
                            <option value="">Selectați...</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    <br />
                </div>
                <br /><br />
                <button class="btn btn-success" type="submit">Adauga articol</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}