@model IEnumerable<RetroGamingWorld.Models.Article>

@{
    ViewData["Title"] = "Articolele mele";
}

@if (TempData["messageArticles"] != null)
{
    <h2 class="alert alert-success p-3 rounded-3 text-center mb-5">
        @TempData["messageArticles"]
    </h2>
}

<div class="d-flex justify-content-between align-items-center mb-5 p-4 rounded-3 shadow-sm bg-white border-start border-5 border-danger">
    <div>
        <h1 class="display-6 fw-bold mb-0">📂 Articolele mele</h1>
        <p class="text-muted mb-0">Gestionează articolele propuse de tine.</p>
    </div>

    <a asp-action="New" class="btn btn-danger shadow-sm rounded-pill px-4">
        <i class="bi bi-plus-lg me-2"></i> Propune Articol
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5 bg-white rounded-4 shadow-sm border-0">
        <i class="bi bi-folder2-open display-1 text-danger opacity-25"></i>
        <h3 class="mt-4 fw-bold">Nu ai nicio propunere activă</h3>
        <p class="text-muted">Începe să contribui la comunitate chiar acum!</p>
        <a asp-action="New" class="btn btn-outline-danger mt-3 rounded-pill px-4">
            Începe acum
        </a>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 position-relative card-hover-effect">

                    <div class="position-relative" style="height: 220px; overflow: hidden;">

                        <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                            @if (item.IsApproved)
                            {
                                <span class="badge bg-success shadow-sm"><i class="bi bi-check-circle me-1"></i> APROBAT</span>
                            }
                            else if (!string.IsNullOrEmpty(item.AdminFeedback))
                            {
                                <span class="badge bg-danger shadow-sm"><i class="bi bi-x-circle me-1"></i> RESPINS</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark shadow-sm"><i class="bi bi-hourglass-split me-1"></i> ÎN AȘTEPTARE</span>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@item.Image" class="w-100 h-100" style="object-fit: cover;" alt="@item.Title">
                        }
                        else
                        {
                            <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-muted">
                                <i class="bi bi-image fs-1 opacity-25"></i>
                            </div>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">

                        <div class="mb-2">
                            <small class="text-muted">
                                📅 @item.Date.ToString("dd MMM yyyy")
                            </small>
                            <span class="mx-1 text-muted">•</span>
                            <small class="fw-semibold text-danger">
                                @(item.Category?.CategoryName ?? "Fără Categorie")
                            </small>
                        </div>

                        <h5 class="card-title fw-bold text-dark mb-3 text-truncate">@item.Title</h5>

                        @if (!item.IsApproved && !string.IsNullOrEmpty(item.AdminFeedback))
                        {
                            <div class="alert alert-danger py-2 px-3 small border-0 bg-danger bg-opacity-10 text-danger rounded-3 mt-auto mb-3">
                                <i class="bi bi-exclamation-circle-fill me-1"></i> <strong>Admin:</strong> @item.AdminFeedback
                            </div>
                        }
                        else
                        {
                            <div class="mt-auto"></div>
                        }
                    </div>

                    <div class="card-footer bg-white border-top-0 pb-4 pt-0">
                        <div class="d-flex justify-content-between align-items-center gap-2">

                            <a asp-action="Show" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary flex-grow-1" title="Vezi detalii">
                                <i class="bi bi-eye"></i> Detalii
                            </a>

                            <a asp-controller="Articles" asp-action="Edit" asp-route-id="@item.Id" asp-route-source="MyArticles" class="btn btn-sm btn-warning text-white shadow-sm" title="Editează">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <form method="post" asp-controller="Articles" asp-action="Delete" asp-route-id="@item.Id" asp-route-source="MyArticles" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger shadow-sm" title="Șterge">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
}
