@model RetroGamingWorld.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">

    <div class="card shadow-lg border-0 mb-5">

        <div class="card-header text-center py-4" style="background-color: #d1e7dd; color: #0f5132;">
            <h1 class="display-5 fw-bold mb-0">@Model.Title</h1>

            <div class="mt-2">
                <span class="badge bg-secondary">@Model.Category?.CategoryName</span>
                <span class="text-muted ms-2" style="font-size: 0.9rem;">
                    Scris de @(Model.User?.UserName ?? "Anonim") pe @Model.Date.ToString("dd MMMM yyyy")
                </span>
            </div>
        </div>

        <div class="card-body p-5">
            <div class="card-text" style="font-size: 1.1rem; line-height: 1.8;">
                @Html.Raw(Model.Content.Replace("\n", "<br>"))
            </div>
        </div>

        <div class="card-footer text-center bg-white border-0 pb-4">
            <a asp-action="Index" class="btn btn-outline-dark">← Înapoi la Articole</a>

            @if ((User.IsInRole("Admin")) || (User.Identity.Name == Model.User?.Email))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Editează</a>
            }
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <h3 class="mb-4"><i class="bi bi-chat-left-text"></i> Comentarii</h3>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                foreach (var comm in Model.Comments.OrderBy(c => c.Date))
                {
                    <div class="card mb-3 shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h6 class="fw-bold text-success">@comm.User?.UserName</h6>
                                <small class="text-muted">@comm.Date.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                            <p class="mt-2 mb-0">@comm.Content</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-light text-center">
                    Nu există comentarii. Fii primul care scrie!
                </div>
            }

            <hr class="my-4" />

                <div class="card bg-light border-0 p-4">
                    <h5>Adaugă un comentariu</h5>
                    <form method="post" asp-action="AddComment">
                        <input type="hidden" name="ArticleId" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <textarea name="Content" class="form-control" rows="3" placeholder="Spune-ți părerea..." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-success">Postează Comentariu</button>
                    </form>
                </div>

        </div>
    </div>
</div>