@model RetroGamingWorld.Models.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <a asp-action="Index" class="btn btn-outline-dark">← Înapoi la Articole</a>
</div>

    <div class="container mt-5">
        <div class="card shadow-lg border-0">
            <div class="row">
                <!-- IMAGINE PRODUS (PĂTRATĂ) -->
                <div class="col-md-4">
                    <div class="card-img-top bg-light d-flex justify-content-center align-items-center border-bottom">
                        <img src="@Model.Image"
                             class="img-fluid object-fit-cover"
                             alt="@Model.Title" />
                    </div>
                </div>
                
                <div class="d-flex flex-column col-md-8">
                <div class="card text-center py-4" style="background-color: #f08e7a; color: #380d04;">
                        <h1 class="display-5 fw-bold mb-0">@Model.Title</h1>
                        <div class="mt-2">
                            <span class="badge bg-secondary">@Model.Category?.CategoryName</span>
                            <span class="text-muted ms-2" style="font-size: 0.9rem;">
                                Scris de @(Model.User?.UserName ?? "Anonim") pe @Model.Date.ToString("dd MMMM yyyy")
                            </span>
                        </div>
                    <div class="mt-2" style="background-color: #f08e7a">
                            <span>
                                @if (@Model.Comments.Count == 0)
                                {
                                    <small>Nu sunt review-uri.</small>
                                }
                                else
                                {
                                    @for (int i = 1; i <= 5; i++)
                                        if (i <= Model.Rating)
                                        {
                                            <span>⭐</span>
                                        }
                                        else
                                        {
                                            <span>&#9734;</span>
                                        }
                                    <small>(@Model.Comments.Count review-uri)</small>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="card-body p-5">
                        <div class="card-text" style="font-size: 1.1rem; line-height: 1.8;">
                            @Html.Raw(Model.Content.Replace("\n", "<br>"))
                        </div>
                    </div>
                    <div class="d-flex justify-content-evenly align-content-around">
                        <p><strong>Preț:</strong> @Model.Price lei</p>
                        <p><strong>Stoc:</strong> @Model.Stock</p>
                    </div>
                    <div class="card-footer text-center bg-white border-0 pb-4">
                        @if (User.IsInRole("Administrator") || User.Identity.Name == Model.User?.Email)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-2">Editează</a>
                        }
                        else if (User.IsInRole("User"))
                        {
                        <form method="post" asp-controller="Cart" asp-action="Add" asp-route-articleId="@Model.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success col-4" title="Adaugă în coș">
                                Adaugă în coș
                            </button>
                        </form>
                        }
                </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-header">
            🤖 AI Assistant pentru întrebări frecvente
        </div>

        <div class="card-body">
            <form asp-controller="ArticleFAQ"
                  asp-action="Ask"
                  method="post">

                <input type="hidden"
                       name="articleId"
                       value="@Model.Id" />

                <div class="mb-2">
                    <input type="text"
                           name="question"
                           class="form-control"
                           placeholder="Întreabă despre acest produs..."
                           required />
                </div>

                <button type="submit" class="btn btn-outline-primary">
                    Trimite întrebarea
                </button>
            </form>

            @if (TempData["AIAnswer"] != null)
            {
                <div class="alert alert-info mt-3">
                    <p>@TempData["AIAnswer"]</p>
                </div>
            }
        </div>
    </div>
    <hr class="my-4" />
    <br />
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h3 class="mb-4"><i class="bi bi-chat-left-text"></i> Comentarii</h3>

            @if (Model.Comments != null && Model.Comments.Any())
            {
                foreach (var comm in Model.Comments.OrderBy(c => c.Date))
                {
                    <div class="card mb-3 shadow-sm border-0">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h6 class="fw-bold text-success">@comm.User?.UserName</h6>
                                <small class="text-muted">@comm.Date.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>

                            <p class="mt-2 mb-0">
                                [
                                @for (int i = 1; i <= comm.Rating; i++)
                                    {
                                        <span>⭐</span>
                                    }
                                ] @comm.Content</p>
                        </div>
                        @if (comm.User.Email == User.Identity.Name)
                        {
                            <div class="card-body">
                                <div class="d-flex justify-content-start rounded-4 flex-row mt-2">
                                <a class="btn btn-warning" asp-action="Edit" asp-controller="Comments" asp-route-id="@comm.Id">Editare</a>
                                <form method="post" asp-action="Delete" asp-controller="Comments" asp-route-id="@comm.Id">
                                    <button class="btn btn-danger" type="submit">Ștergere</button>
                                </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="alert alert-light text-center">
                    Nu există comentarii. Fii primul care scrie!
                </div>
            }

                <div class="card bg-light border-0 p-4">
                    <h5>Adaugă un comentariu și un rating</h5>
                    <form method="post" asp-action="AddComment">
                        <input type="hidden" name="ArticleId" value="@Model.Id" />
                        <div class="form-group">
                            <br />
                            @for (int i = 1; i <= 5; i++)
                            {
                                <label>
                                    <input type="radio" asp-for="Rating" value="@i" />
                                    @i ⭐
                                </label>
                            }
                            <br />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <textarea name="Content" class="form-control" rows="3" placeholder="Spune-ți părerea..." required></textarea>
                        </div>

                        <button type="submit" class="btn btn-success">Postează Comentariu</button>
                    </form>
                </div>

        </div>
    </div>
</div>