@model RetroGamingWorld.Models.Category

<h2 class="text-center mt-5">Editare categorie</h2>

<br />
<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id">

                <div class="form-group">
                    <label asp-for="CategoryName" class="form-label">Denumire categorie</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                    <br />
                    <br />
                </div>
                <br/>
                <button class="btn btn-success" type="submit">Modifica categoria</button>
            </form>
        </div>
    </div>
</div>


