@model RetroGamingWorld.Models.Category


<h2>Adaugare Categorie</h2>

<br />
<div class="container mt-3">
    <div class="row">
        <div class="col-4 offset-3">
            <form method="post" asp-action="New" asp-controller="Categories">

                <div class="form-group">
                    <label asp-for="CategoryName" class="form-label">Denumire categorie</label>
                    <br/>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <br />
                <button class="btn btn-success" type="submit">Adauga categorie</button>

            </form>
        </div>
    </div>
</div>


