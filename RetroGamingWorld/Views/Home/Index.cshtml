@{
    ViewData["Title"] = "Home Page";
}

<div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center"
     style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
    <div class="container-fluid py-5">
        <h1 class="display-4 fw-bold text-retro">RetroGamingWorld 🕹️</h1>
        <p class="col-md-8 fs-4 mx-auto text-muted">
            Bine ați venit în universul jocurilor clasice!
            Locul unde istoria gaming-ului rămâne vie.
        </p>

        <div class="mt-4">
            <a class="btn btn-retro btn-lg mx-2" href="/Articles/Index">
                <i class="bi bi-joystick"></i> Vezi Articolele
            </a>

            @if (User.IsInRole("Colaborator"))
            {
                <a class="btn btn-outline-danger btn-lg mx-2" href="/Articles/New">
                    + Adaugă Articol Nou
                </a>
            }
        </div>
    </div>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <div class="container">
        <div class="row justify-content-center mt-5">

            <div class="col-md-5 mb-4">
                <div class="card h-100 shadow border-0 text-center p-4">
                    <div class="card-body">
                        <h3 class="card-title text-dark">Ai deja cont?</h3>
                        <p class="card-text text-muted">Intră în cont pentru a adăuga articole și a gestiona colecția.</p>
                        <a class="btn btn-outline-danger btn-lg w-100 mt-3" href="/Identity/Account/Login">
                            🔐 Autentificare
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-5 mb-4">
                <div class="card h-100 shadow border-0 text-center p-4" style="background-color: #ffebee;">
                    <div class="card-body">
                        <h3 class="card-title text-danger">Ești nou aici?</h3>
                        <p class="card-text text-muted">Fă-ți un cont gratuit și alătură-te echipei RetroGamingWorld.</p>
                        <a class="btn btn-retro btn-lg w-100 mt-3" href="/Identity/Account/Register">
                            📝 Înregistrare
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
}